@model Category
<form method="post" asp-action="DeletePOST">
	<input asp-for="Id" hidden/>
	<div class="border p-3 mt-4">
		<div class="row p-2">
			<h2 class="text-primary">Delete Category</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" disabled/>
		</div>
		<div class="mb-3">
			<label asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" disabled/>
		</div>
		<button type="submit" class="btn btn-primary" width="120px">Delete</button>
		<a class="btn btn-secoundary" asp-controller="Category" asp-action="Index">Back to list</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}